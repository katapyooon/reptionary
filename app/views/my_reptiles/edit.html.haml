.reptile-detail
  .reptile-content
    %h1 爬虫類情報の編集
    = form_with model: @my_reptile, url: create_my_reptile_path, local: true, html: { multipart: true } do |f|
      .field.image-field
        .current-image
          .default-circle
        = f.label :image, "画像をアップロード"
        = f.file_field :image, class: "image-input", accept: "image/*"

      %div#circle-preview
      %div.circle-frame
        %img#circle-image{ src: "", alt: "Preview", style: "display: none;" }

      %div#crop-modal.modal
        %div.modal-content
          %span.close-button &times;
          %h2 画像の範囲を選択
          %div.cropper-container
            %img#cropper-image{ src: "", style: "display: none;" }
          %button#save-crop.save-button{type: "button"} 確定

      .field
        = f.label :name, "名前"
        = f.text_field :name
      
      .field
        = f.label :species, "種類"
        = f.text_field :species
      
      .field
        = f.label :morph, "モルフ"
        = f.text_field :morph
      
      .field
        = f.label :gender, "性別"
        = f.select :gender, [["オス", "male"], ["メス", "female"], ["不明", "unknown"]], prompt: "選択してください"
      
      .field
        = f.label :birthday, "誕生日"
        = f.date_field :birthday
      
      .field
        = f.label :adoption_date, "お迎え日"
        = f.date_field :adoption_date

      .actions
        = f.submit "更新する", class: "update-button"
        = link_to "戻る", my_reptile_path(@my_reptile), class: "back-button"