%div.create-my-reptile
  %h1 Add a New Reptile

  = form_with model: @my_reptile, url: create_my_reptile_path, local: true, html: { multipart: true } do |f|
    .field
      = f.label :image, "Upload Image"
      = f.file_field :image
    
    .field
      = f.label :name, "名前"
      = f.text_field :name

    .field
      = f.label :name, "種類"
      = f.text_field :name

    .field
      = f.label :description, "モルフ"
      = f.text_field :name

    .field
      = f.label :birthday, "誕生日"
      = f.date_field :birthday

    .field
      = f.label :adoption_date, "お迎え日"
      = f.date_field :adoption_date

    .field
      = f.label :gender, "性別"
      = f.select :gender, [["オス", "male"], ["メス", "female"], ["不明", "unknown"]], prompt: "選択してください"

    .actions
      = f.submit "Create Reptile"